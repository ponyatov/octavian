<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension point="org.eclipse.core.runtime.applications" id="application">
      <application>
         <run class="octavian.Application"/>
      </application>
   </extension>
   
   <extension point="org.eclipse.ui.perspectives">
      <perspective
            name="Octavian"
            class="octavian.Perspective"
            id="octavian.perspective"
            />
   </extension>
   
   <extension point="org.eclipse.ui.views">
   		<category id="octave.category" name="Octave" />
		<view
        category="octave.category"
        class="octavian.nodes"
        icon="icon/nodes.png"
        id="octavian.nodes"
        name="Узлы"
        />
		<view
        category="octave.category"
        class="org.eclipse.ui.navigator.CommonNavigator"
        id="octavian.files"
        name="Файлы"
        />
   </extension>
   
	<extension point="org.eclipse.ui.perspectiveExtensions">
		<perspectiveExtension targetID="*">
			<view
				id="octavian.nodes"
            	relationship="left"
            	standalone="true"
			/>
		<hiddenMenuItem id="org.eclipse.ui.run"/>
		</perspectiveExtension>
	</extension>
   
   <extension point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu label="Файл" icon="icon/file.png">
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Выход"
                  icon="icon/quit.png"/>
         </menu>
      </menuContribution>
   </extension>

</plugin>
